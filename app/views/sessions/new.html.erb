<% provide(:title, "Log in")%>
<h1 xmlns="http://www.w3.org/1999/html">Log in</h1>

<div class="container">
  <div class="card card-container">
    <%= form_for(:session, url: login_path) do |f| %>
        <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
        <p id="profile-name" class="profile-name-card"></p>
        <form class="form-signin">
          <span id="reauth-email" class="reauth-email"></span>
          <%= f.email_field :email, class: 'form-control', :placeholder => "Email Address" %>
          <%= f.password_field :password, class: 'form-control', :placeholder => "Password" %>

          <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me%>
            <span>Remember on this computer</span>
          <% end %>
          <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block btn-signin"%>
        </form>
        <p></p>
        <%= link_to "Forgot the password?", new_password_reset_path, class: "forgot-password" %>
    <% end %>
    <p></p>
    <p>New user? <%= link_to "Sign up now!", signup_path, class: "forgot-password" %></p>
  </div><!-- /card-container -->
</div><!-- /container -->
