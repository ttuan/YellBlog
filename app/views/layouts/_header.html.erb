<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to image_tag("y2logo.png", alt: "Yell logo", :size => '60x50'),
                root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">

        <li ><%= link_to "Home", root_path, class: "glyphicon glyphicon-home" %> </li>
        <li><%= link_to "Help",   help_path, class: "glyphicon glyphicon-question-sign" %></li>
        <li><%= link_to "Users", users_path,class: "dropdown-toggle glyphicon glyphicon-user" %></li>
        <% if logged_in? %>
            <li class="dropdown" >
              <a href="#"  data-toggle="dropdown" class="glyphicon glyphicon-cog" >
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user, class: "glyphicon glyphicon-wrench" %></li>
                <li><%= link_to "Settings", edit_user_path(current_user), class: "glyphicon glyphicon-cog" %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, method: "delete", class: "glyphicon glyphicon-off" %>
                </li>
              </ul>
            </li>
        <% else %>
            <li><%= link_to "Log in", login_path, class: "glyphicon glyphicon-hand-right" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>