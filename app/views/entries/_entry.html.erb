
<!--</li>--, class: "pull-right"-->

<li id="entry-<%= entry.id %>">
<div class="panel panel-default">
  <div class="panel-heading">
  <% if current_user?(entry.user) %>
    <!--<a href="#" class="pull-right">View all</a>-->
    <ul class="nav navbar-nav navbar-right">
    <div class="dropdown">
      <a href="#" data-toggle="dropdown" class="glyphicon glyphicon-chevron-down pull-right"  >
      </a>
      <ul class="dropdown-menu dropdown-menu2 dropdown-menu-entry " >
        <li><%= link_to "Edit", edit_entry_path(entry) %></li>
        <li><%= link_to "Delete", entry, method: :delete,
                                       data: { confirm: "You sure?" } %></li>
      </ul>

    </div>
    </ul>
  <% end %>  
    <h4 class="title"><%= entry.title %></h4>
  <span class=" glyphicon glyphicon-time">
    Posted <%= time_ago_in_words(entry.created_at) %> ago.
  </span>
  </div>
  <div class="panel-body">
    <!--<p><img src="//placehold.it/150x150" class="img-circle pull-right"> <a href="#">The Bootstrap Playground</a></p>-->
    <%= image_tag entry.picture.url if entry.picture? %>
    <div id="lots">

    <%= entry.content %>
    </div>
    <p>...<%= link_to "See more", entry %></p>
  </div>
</div>